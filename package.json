{
  "name": "heroicons-preview",
  "displayName": "heroicons-preview",
  "description": "Inline SVG previews for Heroicons",
  "version": "0.0.1",
  "publisher": "BButner",
  "repository": {
    "type": "git",
    "url": "https://github.com/BButner/VSCode-Heroicons-Preview.git"
  },
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "heroicons-preview.hipTest",
        "title": "hiptest"
      }
    ],
    "configuration": {
      "title": "Heroicons Preview",
      "properties": {
        "hip.iconColor": {
          "type": "string",
          "default": "white",
          "description": "Color to render your Icons. Accepts anything that a \"fill\" attribute would accept in HTML."
        },
        "hip.iconSize": {
          "type": "string",
          "default": "1em",
          "description": "Size of the inline icon. Default is 1em."
        },
        "hip.nodeModulesPath": {
          "type": "string",
          "default": null,
          "description": "Specify a per-workspace node_modules path, relative to the top level directory. ex: \"/projecta/frontend/node_modules\""
        },
        "hip.fileDecorationExtensions": {
          "type": "array",
          "default": [".tsx", ".jsx", ".vue", ".html", ".svelte"],
          "description": "Array of file extensions to search for Icons to decorate. Example: [\".tsx\", \".jsx\"]"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.20.10",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
